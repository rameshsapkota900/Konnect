@page "/creator/setup-profile"
@using Konnect.Mobile.Services
@using Konnect.Shared.DTOs
@using Konnect.Shared.Enums
@inject IApiService ApiService
@inject NavigationManager Navigation

<div class="header">
    <button class="back-btn" @onclick="GoBack">
        <svg viewBox="0 0 24 24" fill="currentColor" width="24" height="24"><path d="M20 11H7.83l5.59-5.59L12 4l-8 8 8 8 1.41-1.41L7.83 13H20v-2z"/></svg>
    </button>
    <h1 class="header-title">@(_isEditing ? "Edit Profile" : "Setup Profile")</h1>
</div>

<div class="page-content">
    <div class="card">
        <div class="form-group">
            <label class="form-label">Bio</label>
            <textarea class="form-input" @bind="_model.Bio" rows="4" placeholder="Tell businesses about yourself..."></textarea>
        </div>

        <div class="form-group">
            <label class="form-label">Hourly Rate (Rs.)</label>
            <input type="number" class="form-input" @bind="_model.HourlyRate" placeholder="Your hourly rate" />
        </div>

        <div class="form-group">
            <label class="form-label">Total Followers</label>
            <input type="number" class="form-input" @bind="_model.FollowersCount" placeholder="Combined followers across platforms" />
        </div>
    </div>

    <div class="card">
        <h3 class="section-title">Social Media Links</h3>
        
        <div class="form-group">
            <label class="form-label">
                <svg viewBox="0 0 24 24" fill="#E4405F" width="20" height="20"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073z"/></svg>
                Instagram
            </label>
            <input type="url" class="form-input" @bind="_model.InstagramUrl" placeholder="https://instagram.com/username" />
        </div>

        <div class="form-group">
            <label class="form-label">
                <svg viewBox="0 0 24 24" fill="#000000" width="20" height="20"><path d="M19.59 6.69a4.83 4.83 0 0 1-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 0 1-5.2 1.74 2.89 2.89 0 0 1 2.31-4.64 2.93 2.93 0 0 1 .88.13V9.4a6.84 6.84 0 0 0-1-.05A6.33 6.33 0 0 0 5 20.1a6.34 6.34 0 0 0 10.86-4.43v-7a8.16 8.16 0 0 0 4.77 1.52v-3.4a4.85 4.85 0 0 1-1-.1z"/></svg>
                TikTok
            </label>
            <input type="url" class="form-input" @bind="_model.TikTokUrl" placeholder="https://tiktok.com/yourusername" />
        </div>

        <div class="form-group">
            <label class="form-label">
                <svg viewBox="0 0 24 24" fill="#FF0000" width="20" height="20"><path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/></svg>
                YouTube
            </label>
            <input type="url" class="form-input" @bind="_model.YouTubeUrl" placeholder="https://youtube.com/yourchannel" />
        </div>
    </div>

    <div class="card">
        <h3 class="section-title">Your Niches</h3>
        <p class="section-desc">Select categories that match your content</p>
        
        <div class="niche-grid">
            @foreach (Niche niche in Enum.GetValues(typeof(Niche)))
            {
                <button class="niche-chip @(_selectedNiches.Contains(niche) ? "selected" : "")" 
                        @onclick="() => ToggleNiche(niche)">
                    @niche
                </button>
            }
        </div>
    </div>

    @if (!string.IsNullOrEmpty(_errorMessage))
    {
        <div class="alert alert-error">@_errorMessage</div>
    }

    <button class="btn btn-primary btn-full" @onclick="SaveProfile" disabled="@_isSaving">
        @(_isSaving ? "Saving..." : "Save Profile")
    </button>
</div>

<style>
    .back-btn { background: none; border: none; padding: 8px; cursor: pointer; }
    .card { background: white; border-radius: var(--radius); padding: 16px; margin-bottom: 16px; box-shadow: var(--shadow); }
    .section-title { font-size: 16px; font-weight: 600; margin: 0 0 4px 0; }
    .section-desc { color: var(--text-secondary); font-size: 14px; margin: 0 0 16px 0; }
    
    .form-label { display: flex; align-items: center; gap: 8px; margin-bottom: 8px; font-weight: 500; }
    
    .niche-grid { display: flex; flex-wrap: wrap; gap: 8px; }
    .niche-chip {
        padding: 8px 16px; border: 2px solid var(--border); border-radius: 20px;
        background: white; font-size: 14px; cursor: pointer; transition: all 0.2s;
    }
    .niche-chip.selected { border-color: var(--primary); background: var(--primary-light); color: var(--primary); }
    
    .alert-error { background: #FEE2E2; color: var(--error); padding: 12px; border-radius: var(--radius-sm); margin-bottom: 16px; }
</style>

@code {
    private CreateCreatorProfileDto _model = new();
    private List<Niche> _selectedNiches = new();
    private bool _isEditing;
    private bool _isSaving;
    private string? _errorMessage;

    protected override async Task OnInitializedAsync()
    {
        var userResponse = await ApiService.GetCurrentUserAsync();
        if (userResponse.Success && userResponse.Data != null)
        {
            var profileResponse = await ApiService.GetCreatorProfileAsync(userResponse.Data.Id);
            if (profileResponse.Success && profileResponse.Data != null)
            {
                _isEditing = true;
                var profile = profileResponse.Data;
                _model = new CreateCreatorProfileDto
                {
                    Bio = profile.Bio,
                    InstagramUrl = profile.InstagramUrl,
                    TikTokUrl = profile.TikTokUrl,
                    YouTubeUrl = profile.YouTubeUrl,
                    FollowersCount = profile.FollowersCount,
                    HourlyRate = profile.HourlyRate
                };
                _selectedNiches = profile.Niches?.ToList() ?? new();
            }
        }
    }

    private void GoBack() => Navigation.NavigateTo("/creator/home");

    private void ToggleNiche(Niche niche)
    {
        if (_selectedNiches.Contains(niche))
            _selectedNiches.Remove(niche);
        else
            _selectedNiches.Add(niche);
    }

    private async Task SaveProfile()
    {
        _errorMessage = null;
        
        if (string.IsNullOrWhiteSpace(_model.Bio))
        {
            _errorMessage = "Please add a bio";
            return;
        }

        _isSaving = true;
        _model.Niches = _selectedNiches;

        ApiResponse<CreatorProfileDto> response;
        if (_isEditing)
        {
            response = await ApiService.UpdateCreatorProfileAsync(new UpdateCreatorProfileDto
            {
                Bio = _model.Bio,
                InstagramUrl = _model.InstagramUrl,
                TikTokUrl = _model.TikTokUrl,
                YouTubeUrl = _model.YouTubeUrl,
                FollowersCount = _model.FollowersCount,
                HourlyRate = _model.HourlyRate,
                Niches = _selectedNiches
            });
        }
        else
        {
            response = await ApiService.CreateCreatorProfileAsync(_model);
        }

        if (response.Success)
        {
            Navigation.NavigateTo("/creator/home");
        }
        else
        {
            _errorMessage = response.Message ?? "Failed to save profile";
        }
        
        _isSaving = false;
    }
}
