@page "/chat/{ChatId}"
@inject IFirebaseChatService ChatService
@inject IFirebaseAuthService AuthService
@implements IDisposable

<div class="chat-page">
    <div class="chat-header">
        <button class="back-btn" @onclick="GoBack">‚Üê</button>
        <div class="chat-title">
            <h2>@_partnerName</h2>
            <span class="chat-subtitle">@_dealTitle</span>
        </div>
    </div>

    <div class="messages-container" @ref="_messagesContainer">
        @foreach (var message in _messages)
        {
            <div class="message @(message.SenderId == _currentUserId ? "sent" : "received")">
                <div class="message-bubble">
                    <p>@message.Text</p>
                    <span class="message-time">@message.Timestamp.ToString("HH:mm")</span>
                </div>
            </div>
        }
    </div>

    <div class="message-input-container">
        <input type="text" class="message-input" @bind="_newMessage" 
               @onkeypress="HandleKeyPress" placeholder="Type a message..." />
        <button class="send-btn" @onclick="SendMessage" disabled="@string.IsNullOrWhiteSpace(_newMessage)">
            <svg viewBox="0 0 24 24" fill="currentColor" width="24" height="24">
                <path d="M2.01 21L23 12 2.01 3 2 10l15 2-15 2z"/>
            </svg>
        </button>
    </div>
</div>

<style>
    .chat-page {
        display: flex;
        flex-direction: column;
        height: 100vh;
        background: var(--background);
    }
    
    .chat-header {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 16px;
        background: linear-gradient(135deg, var(--primary), var(--primary-dark));
        color: white;
    }
    
    .back-btn {
        background: none;
        border: none;
        color: white;
        font-size: 24px;
        cursor: pointer;
        padding: 8px;
    }
    
    .chat-title h2 { font-size: 18px; margin: 0; }
    .chat-subtitle { font-size: 12px; opacity: 0.8; }
    
    .messages-container {
        flex: 1;
        overflow-y: auto;
        padding: 16px;
        display: flex;
        flex-direction: column;
        gap: 8px;
    }
    
    .message {
        display: flex;
        max-width: 80%;
    }
    
    .message.sent {
        align-self: flex-end;
    }
    
    .message.received {
        align-self: flex-start;
    }
    
    .message-bubble {
        padding: 12px 16px;
        border-radius: 18px;
        position: relative;
    }
    
    .message.sent .message-bubble {
        background: var(--primary);
        color: white;
        border-bottom-right-radius: 4px;
    }
    
    .message.received .message-bubble {
        background: white;
        box-shadow: var(--shadow);
        border-bottom-left-radius: 4px;
    }
    
    .message-bubble p { margin: 0 0 4px; }
    
    .message-time {
        font-size: 10px;
        opacity: 0.7;
        display: block;
        text-align: right;
    }
    
    .message-input-container {
        display: flex;
        gap: 12px;
        padding: 12px 16px;
        background: white;
        border-top: 1px solid var(--border);
        padding-bottom: calc(12px + env(safe-area-inset-bottom));
    }
    
    .message-input {
        flex: 1;
        padding: 12px 16px;
        border: 1px solid var(--border);
        border-radius: 24px;
        font-size: 16px;
        outline: none;
    }
    
    .message-input:focus { border-color: var(--primary); }
    
    .send-btn {
        width: 48px;
        height: 48px;
        border-radius: 50%;
        background: var(--primary);
        color: white;
        border: none;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .send-btn:disabled { opacity: 0.5; }
</style>

@code {
    [Parameter] public string ChatId { get; set; } = "";
    
    private List<ChatMessage> _messages = new();
    private string _newMessage = "";
    private string? _currentUserId;
    private string _partnerName = "Chat";
    private string _dealTitle = "";
    private ElementReference _messagesContainer;
    private IDisposable? _subscription;

    protected override async Task OnInitializedAsync()
    {
        _currentUserId = AuthService.GetCurrentUserId();
        
        // Subscribe to messages
        _subscription = ChatService.GetMessages(ChatId)
            .Subscribe(message =>
            {
                if (message != null && !_messages.Any(m => m.Id == message.Id))
                {
                    _messages.Add(message);
                    _messages = _messages.OrderBy(m => m.Timestamp).ToList();
                    InvokeAsync(StateHasChanged);
                }
            });

        // Mark as read
        if (!string.IsNullOrEmpty(_currentUserId))
        {
            await ChatService.MarkAsReadAsync(ChatId, _currentUserId);
        }
    }

    private async Task SendMessage()
    {
        if (string.IsNullOrWhiteSpace(_newMessage) || string.IsNullOrEmpty(_currentUserId)) return;

        var message = new ChatMessage
        {
            SenderId = _currentUserId,
            SenderName = "Me", // Would come from user profile
            Text = _newMessage.Trim()
        };

        _newMessage = "";
        await ChatService.SendMessageAsync(ChatId, message);
    }

    private async Task HandleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await SendMessage();
        }
    }

    private void GoBack()
    {
        // Navigation back
    }

    public void Dispose()
    {
        _subscription?.Dispose();
    }
}
