@page "/profile"
@using Konnect.Mobile.Services
@using Konnect.Shared.DTOs
@using Konnect.Shared.Enums
@inject IApiService ApiService
@inject IFirebaseAuthService AuthService
@inject NavigationManager Navigation

<div class="header">
    <h1 class="header-title">Profile</h1>
    <button class="header-action" @onclick="EditProfile">
        <svg viewBox="0 0 24 24" fill="currentColor" width="24" height="24"><path d="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z"/></svg>
    </button>
</div>

<div class="page-content">
    @if (_user != null)
    {
        <div class="profile-header">
            <div class="avatar avatar-lg">
                @if (!string.IsNullOrEmpty(_user.ProfileImageUrl))
                {
                    <img src="@_user.ProfileImageUrl" alt="@_user.FullName" />
                }
                else
                {
                    @(_user.FullName?.FirstOrDefault())
                }
            </div>
            <h2>@_user.FullName</h2>
            <p class="text-secondary">@_user.Email</p>
            <p class="location">üìç @_user.Location</p>
            <span class="user-type-badge @(_user.UserType == UserType.Business ? "business" : "creator")">
                @(_user.UserType == UserType.Business ? "Business" : "Creator")
            </span>
        </div>

        <div class="card">
            <h3 class="card-title">Account Info</h3>
            <div class="info-row"><span>Email</span><span>@_user.Email</span></div>
            <div class="info-row"><span>Phone</span><span>@(_user.Phone ?? "Not set")</span></div>
            <div class="info-row"><span>Member Since</span><span>@_user.CreatedAt.ToString("MMM yyyy")</span></div>
        </div>

        @if (_user.UserType == UserType.Creator)
        {
            @if (_creatorProfile != null)
            {
                <div class="card">
                    <div class="stats-row">
                        <div class="stat-item">
                            <span class="stat-value">@FormatNumber(_creatorProfile.FollowersCount)</span>
                            <span class="stat-label">Followers</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-value">@(_creatorProfile.EngagementRate?.ToString("0.0") ?? "-")%</span>
                            <span class="stat-label">Engagement</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-value">Rs. @(_creatorProfile.HourlyRate?.ToString("N0") ?? "-")</span>
                            <span class="stat-label">Rate</span>
                        </div>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(_creatorProfile.Bio))
                {
                    <div class="card">
                        <h3 class="card-title">About</h3>
                        <p class="bio-text">@_creatorProfile.Bio</p>
                    </div>
                }

                <div class="card">
                    <h3 class="card-title">Social Media</h3>
                    <div class="social-links">
                        @if (!string.IsNullOrEmpty(_creatorProfile.InstagramUrl))
                        {
                            <a href="@_creatorProfile.InstagramUrl" target="_blank" class="social-link instagram">
                                <svg viewBox="0 0 24 24" fill="#E4405F" width="24" height="24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069z"/></svg>
                                Instagram
                            </a>
                        }
                        @if (!string.IsNullOrEmpty(_creatorProfile.TikTokUrl))
                        {
                            <a href="@_creatorProfile.TikTokUrl" target="_blank" class="social-link tiktok">
                                <svg viewBox="0 0 24 24" fill="#000" width="24" height="24"><path d="M19.59 6.69a4.83 4.83 0 0 1-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 0 1-5.2 1.74 2.89 2.89 0 0 1 2.31-4.64 2.93 2.93 0 0 1 .88.13V9.4a6.84 6.84 0 0 0-1-.05A6.33 6.33 0 0 0 5 20.1a6.34 6.34 0 0 0 10.86-4.43v-7a8.16 8.16 0 0 0 4.77 1.52v-3.4a4.85 4.85 0 0 1-1-.1z"/></svg>
                                TikTok
                            </a>
                        }
                        @if (!string.IsNullOrEmpty(_creatorProfile.YouTubeUrl))
                        {
                            <a href="@_creatorProfile.YouTubeUrl" target="_blank" class="social-link youtube">
                                <svg viewBox="0 0 24 24" fill="#FF0000" width="24" height="24"><path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814z"/></svg>
                                YouTube
                            </a>
                        }
                    </div>
                    @if (string.IsNullOrEmpty(_creatorProfile.InstagramUrl) && string.IsNullOrEmpty(_creatorProfile.TikTokUrl) && string.IsNullOrEmpty(_creatorProfile.YouTubeUrl))
                    {
                        <p class="text-secondary">No social links added yet</p>
                    }
                </div>

                @if (_creatorProfile.Niches?.Any() == true)
                {
                    <div class="card">
                        <h3 class="card-title">Niches</h3>
                        <div class="niches">
                            @foreach (var niche in _creatorProfile.Niches)
                            {
                                <span class="niche-tag">@niche</span>
                            }
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="card setup-prompt">
                    <h3>Complete Your Profile</h3>
                    <p>Add your social links and bio to attract businesses</p>
                    <button class="btn btn-primary" @onclick="SetupCreatorProfile">Setup Profile</button>
                </div>
            }
        }

        <div class="profile-actions">
            <button class="btn btn-outline btn-full" @onclick="EditProfile">Edit Profile</button>
            <button class="btn btn-danger btn-full" @onclick="Logout">Logout</button>
        </div>
    }
    else
    {
        <div class="loading">Loading profile...</div>
    }
</div>

<BottomNavigation UserType="@(_user?.UserType ?? UserType.Creator)" />

<style>
    .header { display: flex; justify-content: space-between; align-items: center; }
    .header-action { background: none; border: none; padding: 8px; cursor: pointer; color: var(--primary); }
    
    .profile-header {
        text-align: center; padding: 24px; background: white;
        border-radius: var(--radius); margin-bottom: 16px; box-shadow: var(--shadow);
    }
    .profile-header h2 { margin: 12px 0 4px; }
    .location { color: var(--text-secondary); font-size: 14px; margin: 8px 0; }
    .user-type-badge {
        display: inline-block; padding: 6px 16px; border-radius: 20px;
        font-size: 14px; font-weight: 500; margin-top: 8px;
    }
    .user-type-badge.business { background: #DBEAFE; color: #2563EB; }
    .user-type-badge.creator { background: #D1FAE5; color: #059669; }
    
    .card { background: white; border-radius: var(--radius); padding: 16px; margin-bottom: 16px; box-shadow: var(--shadow); }
    .card-title { font-size: 14px; font-weight: 600; color: var(--text-secondary); margin: 0 0 12px 0; text-transform: uppercase; }
    
    .info-row { display: flex; justify-content: space-between; padding: 12px 0; border-bottom: 1px solid var(--border); }
    .info-row:last-child { border-bottom: none; }
    .info-row span:first-child { color: var(--text-secondary); }
    
    .stats-row { display: flex; justify-content: space-around; }
    .stat-item { text-align: center; }
    .stat-value { display: block; font-size: 20px; font-weight: 700; color: var(--primary); }
    .stat-label { font-size: 12px; color: var(--text-secondary); }
    
    .bio-text { color: var(--text-secondary); line-height: 1.6; margin: 0; }
    
    .social-links { display: flex; flex-direction: column; gap: 8px; }
    .social-link {
        display: flex; align-items: center; gap: 12px; padding: 12px;
        background: var(--bg-secondary); border-radius: var(--radius-sm);
        text-decoration: none; color: var(--text-primary); font-weight: 500;
    }
    
    .niches { display: flex; flex-wrap: wrap; gap: 8px; }
    .niche-tag { background: var(--primary-light); color: var(--primary); padding: 6px 12px; border-radius: 16px; font-size: 13px; }
    
    .setup-prompt { text-align: center; padding: 24px; }
    .setup-prompt h3 { margin: 0 0 8px 0; }
    .setup-prompt p { color: var(--text-secondary); margin: 0 0 16px 0; }
    
    .profile-actions { display: flex; flex-direction: column; gap: 12px; margin-top: 24px; padding-bottom: 100px; }
    .btn-danger { background: var(--error); color: white; border: none; }
    
    .loading { text-align: center; padding: 40px; color: var(--text-secondary); }
</style>

@code {
    private UserDto? _user;
    private CreatorProfileDto? _creatorProfile;

    protected override async Task OnInitializedAsync()
    {
        var userResult = await ApiService.GetCurrentUserAsync();
        if (userResult.Success)
        {
            _user = userResult.Data;
            
            if (_user?.UserType == UserType.Creator)
            {
                var profileResult = await ApiService.GetCreatorProfileAsync(_user.Id);
                if (profileResult.Success)
                    _creatorProfile = profileResult.Data;
            }
        }
    }

    private void EditProfile() => Navigation.NavigateTo(_user?.UserType == UserType.Creator ? "/creator/setup-profile" : "/profile/edit");
    private void SetupCreatorProfile() => Navigation.NavigateTo("/creator/setup-profile");

    private async Task Logout()
    {
        await AuthService.SignOutAsync();
        Navigation.NavigateTo("/login");
    }

    private static string FormatNumber(int num) => num switch
    {
        >= 1000000 => $"{num / 1000000.0:0.#}M",
        >= 1000 => $"{num / 1000.0:0.#}K",
        _ => num.ToString()
    };
}
